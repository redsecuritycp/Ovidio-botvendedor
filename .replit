entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales"]

[deployment]
run = ["python", "main.py"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ovidio Bot"

[[workflows.workflow]]
name = "Ovidio Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"
